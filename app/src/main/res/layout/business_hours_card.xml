<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/businessHoursLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
>

    <LinearLayout
        android:id="@+id/nonSplitHoursLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/dayOpeningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opening_hour"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="42dp"
            android:layout_height="25dp"
            app:icon="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/dayClosingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/closing_hour"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="42dp"
            android:layout_height="25dp"
            app:icon="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>

        <CheckBox
            android:id="@+id/closedCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/closed"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/splitHoursLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="57dp"
        >

        <TextView
            android:id="@+id/splitDayOpeningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opening_hour"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="42dp"
            android:layout_height="25dp"
            app:icon="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>

        <TextView
            android:id="@+id/to2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/splitDayClosingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/closing_hour"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="42dp"
            android:layout_height="25dp"
            app:icon="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>


    </LinearLayout>

</LinearLayout>






